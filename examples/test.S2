rslt = SELECT $x, $x*$y
         FROM x:[1,2,3,4], y:[3,4,1]
        WHERE $x == $y
     ORDER BY $x ASC|ASCENDING|DESC|DESCENDING
     GROUP BY $y
   START WITH $f = 0, $g = 12
   CONNECT BY NO CYCLE | UNIQUE
              $f = $f + g
    STOP WITH $f > 12
